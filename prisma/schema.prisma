generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum BaselineTestStatus {
  completed
  incomplete
}

enum GroupType {
  intervention
  nonintervention
}

enum Sex {
  Male
  Female
}

enum YesNo {
  Yes
  No
}

model User {
  id                  String    @id @default(cuid())
  clerkUserId         String    @unique
  email               String?   @unique
  firstName           String?
  Age                 Int?
  Sex                 Sex?
  MusicalBackground   YesNo?
  ListenedToRagas     YesNo?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  feedbacks           Feedback[]
  baselineTest    BaselineTestStatus  @default(incomplete)
  group GroupType @default(nonintervention)


  @@map("users")
}

model Feedback {
  id                  String   @id @default(cuid())
  userId              String
  user                User     @relation(fields: [userId], references: [id])
  focusDifficulty     Int?
  distractionFrequency Int?
  mindWandering       Int?
  attentionChallenge  Int?
  calmnessRating      Int?
  frustrationLevel    String?
  musicInfluence      String?
  performanceImprovement String?
  strategyUse         String?
  taskPrioritization  String?
  comments            String?
  createdAt           DateTime @default(now())
  
  @@index([userId])
  @@map("feedbacks")
}
